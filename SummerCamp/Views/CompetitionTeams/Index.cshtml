@using SummerCamp.Models
@model IEnumerable<CompetitionTeamViewModel>
@{
    ViewData["Title"] = "Teams Competing";
}
<h1 class="centered-title">Teams Competing</h1>
<a asp-controller="CompetitionTeams" asp-action="Add" class="btn btn-primary">Add a competition</a>
<div class="text-center">
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6">No Records found.</td>
                </tr>
            }
            else
            {
                <thead class="thead-dark">
                    <tr>
                        <th>Team</th>
                        <th>Competition</th>
                        <th>TotalPoints</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TeamId</td>
                            <td>@item.CompetitionId</td>
                            <td>@item.TotalPoints</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Competitions" asp-route-competitionId="@item.Id" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Competitions" asp-route-competitionId="@item.Id" class="btn btn-primary">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>

