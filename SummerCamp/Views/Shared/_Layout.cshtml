<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SummerCamp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SummerCamp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <style>
        /* Stilurile specifice pentru bara de confidențialitate pe pagina de home */
        .home .fixed-bottom {
            background-color: rgba(255, 255, 255, 0.8); /* Schimbați culoarea fundalului după preferință */
            color: black; /* Setează culoarea textului la negru */
        }
    </style>
</head>
<body class="home">
    <!-- Adăugați clasa "home" la body tag pe pagina de home -->
    <header class="jumbotron">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">SummerCamp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-controller="Coaches" asp-action="Index">Coaches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-controller="Sponsors" asp-action="Index">Sponsors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-controller="Teams" asp-action="Index">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-controller="Players" asp-action="Index">Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-controller="Competitions" asp-action="Index">Competitions</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark py-3 text-center fixed-bottom">
        <div class="container">
            <span class="privacy-text">&copy; 2023 SummerCamp</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            // Activare funcționalitatea butoanelor de tip collapsible navbar
            $('.navbar-toggler').click(function () {
                $('.navbar-collapse').toggleClass('show');
            });
        });
    </script>
</body>
</html>
